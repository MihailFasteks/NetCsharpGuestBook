@model IEnumerable<NetCsharpGuestBook.Models.Users>

@{
    Layout = null;
}

@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>Сообщения</title>
</head>
<body>
    <!-- Отображение списка пользователей и их сообщений -->
    @foreach (var user in Model)
    {
        <table class="table">
            <tr><td><strong>@user.Name</strong></td></tr>
            @foreach (var message in user.Messages)
            {
                <tr>
                    <td><p>@message.Text</p></td>
                    <td><p>@message.Date</p></td>
                </tr>
            }
        </table>
    }

    <!-- Проверка, если пользователь авторизован -->
    <div>
        @if (Context.Session.GetString("user") != null)
        {
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <!-- Форма для добавления нового сообщения -->
                    <form asp-action="AddMessage" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="Text" class="control-label">Message</label>
                            <input type="text" name="Text" class="form-control" required />
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Add Message" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            <!-- Кнопки для входа и регистрации, если пользователь не авторизован -->
            <div>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Login", "User")'">Login</button>
                    <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Registration", "User")'">Register</button>
                    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Logout", "User")'">Login as Guest</button>
                </div>
            </div>
        }
        
</body>
</html>
